---
import "../styles/global.css";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import { Toaster } from "react-hot-toast";
import OpenGraphTags from "../components/OpenGraphTags.astro";
import Tracking from "../components/Tracking.astro";
export interface Props {
  title: string;
  description: string;
  path: string;
}

const { title, description, path } = Astro.props;

const mainCardContainerStyle = [
  "flex",
  "items-start",
  "mt-9",
  "mb-24",
  "justify-center",
  ];

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="/favicon-light.png"
      rel="icon"
      media="(prefers-color-scheme: light)"
      type="image/png"
    />
    <link
      href="/favicon-dark.png"
      rel="icon"
      media="(prefers-color-scheme: dark)"
      type="image/png"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title} - TechLingo.fyi</title>
    <OpenGraphTags title={title} description={description} path={path} />
  </head>
  <body>
    <Toaster
  position="top-center"
  reverseOrder={false}
/>
    <div class="min-h-screen flex flex-col bg-primaryClear dark:bg-dark0">
      <header>
        <NavBar />
      </header>

      <main class={mainCardContainerStyle.join(" ")}>
        <slot />
      </main>

      <Footer />
      
    </div>
    <Tracking />
  </body>
</html>
