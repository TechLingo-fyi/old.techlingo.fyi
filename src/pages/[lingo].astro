---
import Layout from "../layouts/Layout.astro";
import LingoDetail from "../components/LingoDetail";
import slugify from "slugify";

export async function getStaticPaths() {
  const jsons = await Astro.glob("../../lingos/*.json");

  const list = jsons.map((json) => {
    const languages = new Array();
    json.definitions.forEach((element) => {
      languages.push(element.lang);
    });

    return languages.map((language) => {
      return {
        params: {
          lingo: slugify(json["term"], { lower: true }),
        },
        props: {
          data: json,
        },
      };
    });
  });

  // Flatten the list
  const paths = list.flat();
  return paths;
}

const { lingo } = Astro.params;
const { data } = Astro.props;

const containerStyle = [
  "flex",
  "items-start",
  "mt-9",
  "justify-center",
  "h-screen",
];
---

<Layout title={data.term}>
  <LingoDetail client:only data={data} language="en" />
</Layout>
