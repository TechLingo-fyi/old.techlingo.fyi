---
import Layout from "../../layouts/Layout.astro";
import LingoDetail from "../../components/LingoDetail";
import slugify from "slugify";

export async function getStaticPaths() {
  const jsons = await Astro.glob("../../../lingos/*.json");

  const list = jsons.map((json) => {
    const languages = new Array();
    json.definitions.forEach((element) => {
      languages.push(element.lang);
    });

    return languages.map((language) => {
      return {
        params: {
          lingo: slugify(json["term"], { lower: true }),
          language: language,
        },
        props: {
          data: json,
        },
      };
    });
  });

  // Flatten the list
  const paths = list.flat();
  return paths;
}

const { lingo, language } = Astro.params;
const { data } = Astro.props;

const dscription = data.definitions.filter((definition) => {
  return definition.lang === language;
})[0].definition;


const path = `${lingo}/${language}`;

const shareableText = `${dscription} https://techlingo.fyi/${path}`
---

<Layout title={data.term} description={dscription} path={path}>
  <LingoDetail client:only  data={data} shareableText={shareableText} language={language} slug={lingo} />
</Layout>
