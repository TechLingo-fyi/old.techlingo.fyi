---
import Layout from "../../layouts/Layout.astro";
import LingoDefinitions from "../../components/LingoDefinitions.tsx";
import slugify from "slugify";

export async function getStaticPaths() {
  const jsons = await Astro.glob("../../../lingos/*.json");

  const list = jsons.map((json) => {
    const languages = new Array();
    json.definitions.forEach((element) => {
      languages.push(element.lang);
    });

    return languages.map((language) => {
      return {
        params: {
          lingo: slugify(json["term"], { lower: true }),
          language: language,
        },
        props: {
          data: json,
        },
      };
    });
  });

  // Flatten the list
  const paths = list.flat();
  console.log(paths);
  return paths;
}

const { ling, language } = Astro.params;
const { data } = Astro.props;
---

<Layout title={data.term}>
  <div class="flex items-start mt-9 justify-center h-screen">
    <div
      class="max-w-3xl min-w-3xl xl:min-w-max p-8 bg-white border border-gray-200 rounded-lg shadow dark:bg-dark1 dark:border-gray-700"
    >
      <h3
        class="mb-2 text-5xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        {data.term}
      </h3>
      <LingoDefinitions data={data} language={language} />
    </div>
  </div>
</Layout>
